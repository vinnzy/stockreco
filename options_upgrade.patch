+def compute_options_suitability(scored: pd.DataFrame) -> pd.DataFrame:
+    """
+    EOD-only proxy for "options tradability".
+    Goal: prioritize names more likely to move enough intraday to pay options (20–50% premium targets).
+    """
+    df = scored.copy()
