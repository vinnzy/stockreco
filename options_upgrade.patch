+    atr_n = _minmax(df["atr_pct"].fillna(0))
+    adx_n = _minmax(df["adx_14"].fillna(0))
+    rs_n  = _minmax(df["rel_strength_5d"].fillna(0))
+
+    rsi = df["rsi_14"].fillna(50)
+    # impulse if oversold bounce OR strong momentum zone
+    rsi_impulse = ((rsi <= 35).astype(float) + (rsi >= 60).astype(float)) / 2.0
+
+    # penalize very low-trend chop
+    chop_penalty = (df["adx_14"].fillna(0) < 12).astype(float) * 0.25
+
+    df["options_score"] = (
+        0.40 * atr_n +
+        0.30 * adx_n +
+        0.20 * rsi_impulse +
+        0.10 * rs_n -
+        chop_penalty
+    )
+    return df
